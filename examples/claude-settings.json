{
  "$schema": "https://code.claude.com/schemas/settings.json",
  "description": "Example .claude/settings.json with PostToolUse hook for automatic skill tracking",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/track-skill.sh",
            "timeout": 5,
            "statusMessage": "Logging skill usage..."
          }
        ]
      }
    ]
  }
}
